<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonLightRed" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/dr_red_bg</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="OtpEditText" parent="ThemeOverlay.Material3.TextInputEditText">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxEms">1</item>
        <item name="android:maxLength">1</item>
        <item name="background">@drawable/dr_gray_bg</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="SearchCustom">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:background">@drawable/dr_gray_bg</item>
    </style>

</resources>